---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogList from "../components/BlogList.astro";
---

<BaseLayout>
  <div
    class="flex flex-row justify-center text-5xl text-center font-bold mt-20"
  >
    My Journal
  </div>
  <div class="flex text-xl w-full justify-center text-center my-5">
    <div class="flex md:w-1/2 mx-4 justify-center">
      Be prepared for your next adventure
    </div>
  </div>
  <div class="flex justify-center items-center w-full">
    <div class="flex justify-center">
      <BlogList />
    </div>
  </div>
</BaseLayout>
